{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": ["-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}", "-std=c++20"],
            "options": {
              "cwd": "/usr/bin"
            },
            "problemMatcher": ["$gcc"],
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
          "type": "cppbuild",
          "label": "C/C++: g++ build all cpp in folder",
          "command": "/usr/bin/g++",
          "args": [
              "-fdiagnostics-color=always",
              "-g",
              "*.cpp",
              "-o",
              "${fileDirnameBasename}",
          ],
          "options": {
              "cwd": "${fileDirname}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "detail": "Task generated by Debugger."
      },

    ],
    "version": "2.0.0"
}